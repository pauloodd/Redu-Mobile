<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/helpStatusedByLectureLytRoot"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5sp" >

    <ImageView
        android:id="@+id/helpStatusedByLectureImgCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/course_icon" />

    <TextView
        android:id="@+id/helpStatusedByLectureLblMainAndSecondary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/helpStatusedByLectureImgCourse"
        android:layout_marginLeft="5sp"
        android:layout_toRightOf="@+id/helpStatusedByLectureImgCourse"
        android:textColor="#B3B3B3"
        android:textSize="13.25sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/helpStatusedByLectureLblMainAndSecondary"
        android:layout_marginTop="5sp" >

        <ImageView
            android:id="@+id/helpStatusedByLectureImgUserThumb"
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/default_user_thumb" />

        <TextView
            android:id="@+id/helpStatusedByLectureLblInfo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5sp"
            android:layout_toRightOf="@+id/helpStatusedByLectureImgUserThumb"
            android:text="Informações"
            android:textColor="#000000"
            android:textSize="13.25sp" />

        <TextView
            android:id="@+id/helpStatusedByLectureLblCreationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/helpStatusedByLectureLblInfo"
            android:layout_below="@+id/helpStatusedByLectureLblInfo"
            android:text="Data de criação"
            android:textColor="#b2b2b2"
            android:textSize="10.25sp" />

        <ImageView
            android:id="@+id/helpStatusedByLectureImgUpArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/helpStatusedByLectureLblCreationDate"
            android:layout_below="@+id/helpStatusedByLectureLblCreationDate"
            android:paddingLeft="10sp"
            android:src="@drawable/up_arrow" />

        <LinearLayout
            android:id="@+id/helpStatusedByLectureLytText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/helpStatusedByLectureImgUpArrow"
            android:layout_below="@+id/helpStatusedByLectureImgUpArrow"
            android:background="@drawable/gray_background"
            android:orientation="vertical"
            android:padding="5sp" >

            <br.com.redumobile.gui.LinkEnabledTextView
                android:id="@+id/helpStatusedByLectureLblText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textColorLink="#73c3e6"
                android:textSize="13.25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/helpStatusedByLectureLytText"
            android:layout_below="@+id/helpStatusedByLectureLytText"
            android:layout_marginTop="2.5sp"
            android:gravity="right|center_vertical" >

            <ImageView
                android:id="@+id/helpStatusedByLectureImgArrowRevolve"
                android:layout_width="8.25sp"
                android:layout_height="8.25sp"
                android:layout_marginRight="3sp"
                android:src="@drawable/arrow_revolve" />

            <TextView
                android:id="@+id/helpStatusedByLectureLblAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:text="Responder"
                android:textColor="#73c3e6"
                android:textSize="14sp"
                android:textStyle="bold" >
            </TextView>

            <ImageView
                android:id="@+id/helpStatusedByLectureImgAnswers"
                android:layout_width="13sp"
                android:layout_height="10sp"
                android:layout_marginRight="3sp"
                android:src="@drawable/answers_ico" />

            <TextView
                android:id="@+id/helpStatusedByLectureLblAnswersCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>